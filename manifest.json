{
  "description": "Simple GCWEB style extension template",  "version": "0.3",
  "name": "Extension Template",  "version": "1.0",
  "homepage_url": "https://github.com/mdn/webextensions-examples/tree/master/beastify",
  "icons": {
    "128": "images/icon.png",
    "48": "images/icon.png",
    "16": "images/icon.png"
  },

  "applications": {
    "gecko": {
      "id": "beastify@mozilla.org",
      "strict_min_version": "45.0.0"
    }
  },

  "permissions": [
    "activeTab",
	"webRequest"
  ],  

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popups/popup.html"
  },
  
  "options_page": "options.html",
  "optional_permissions": ["http://api.stackoverflow.com/"],
  "manifest_version": 2

}
